//- index.jade
extends ./layout.jade

block row-content
  div.row
    div.col-lg-6.col-md-6.col-xs-12      
      h2 Transcribe The Speech
      div.row.well
        div.col-lg-12.col-md-12.col-xs-12
          div.row.form-group
            div.col-lg-12.col-md-12.col-xs-12.upload-label
              span Use the audio from the video to get textual data.
          div.row
            div.sample-audio.col-lg-6.col-md-6.col-xs-6.text-center
              a.sample-btn.audio1(href='javascript:void(0);')
                img.sample-icon(src='images/play-icon.svg')
                p.sample-title Audio Slander
              a.btn.btn-block.send-api-audio1 Send to API
            div.sample-audio.col-lg-6.col-md-6.col-xs-6.text-center
            

    div.col-lg-6.col-md-6.col-xs-12
      h2 Output
      p Here we extract an audio file and transform it into text with 
        | Watson's speech to text service. Look at how "accurate" it is.
        | 
      div.well
        div.form-group.row.loading.text-center(style='display:none')
          img(src='images/watson.gif')
        div.errorMsg
        div#text
        
  div.row
    div.col-lg-6.col-md-6.col-xs-12      
      h2 Analyze the text for "truth"
      div.row.well
        div.col-lg-12.col-md-12.col-xs-12
          div.row.form-group
            div.col-lg-12.col-md-12.col-xs-12.upload-label
              span Given the input text: Romney: ...for amber waves of grain...
              |for purple mountains majesty...[Caption: As Governor, 
              |Romney outsourced jobs to India. The Boston Globe 5/1/12] Romney: 
              |...above the fruited plain... 
          div.row
            div.sample-audio.col-lg-6.col-md-6.col-xs-6.text-center              
              a.btn.btn-block.send-text Send to For Text Analysis
            

    div.col-lg-6.col-md-6.col-xs-12
      h2 Output
      p Here extract feature vectors  
        |We found the following keywords:        | 
      div.well
        div.form-group.row.loading.text-center(style='display:none')
          img(src='images/watson.gif')
        div.errorMsg
        |<div class="chart" style= "posistion relative; top: 0; left: 600;" ></div>
     div.row
    
    div.col-lg-6.col-md-6.col-xs-12      
      h2 Check against the Mug Shot Database of Criminals 
      div.row.well
        div.col-lg-12.col-md-12.col-xs-12
          div.row.form-group
            div.col-lg-12.col-md-12.col-xs-12.upload-label
              img(src='images/Clinton.jpg')              
          div.row
            div.sample-audio.col-lg-6.col-md-6.col-xs-6.text-center              
              a.btn.btn-block.send-image Send for Facial Scanning
            

    div.col-lg-6.col-md-6.col-xs-12
      h2 Output
      p Here extract feature vectors:        
      div.well
        div.form-group.row.loading.text-center(style='display:none')
          img(src='images/watson.gif')
        div.errorMsg
        |<div class="chart1" style= "posistion relative; top: 0; left: 600;" ></div>     
  
  //- Preload sample audios
  div.row-center   
   |<div style="position: relative; left: 0; top: 0;">  
   |<video id="video" width="720" controls="true" style="position: relative; top: 0; left: 0;">
   |<source src="movie/movie.mp4"><!-- WebKit -->
   |	Your browser does not support HTML5 video tag. Please download FireFox 3.5 or higher.
   |</video><br/>
   |<img id=filter src="images/Filter.png" style="position: absolute; top: 0px; left: 0px;"/>
   |</div>
  div.row-center
  div.hidden
    audio.sample1(preload='auto', autobuffer, controls, src='audio/sample1.wav')
    audio.sample2(preload='auto', autobuffer, controls, src='audio/sample2.wav')
    form.upload-form#fileupload(method='POST', enctype='multipart/form-data', action='/')
     input.url-input(type='hidden', name='url')
   